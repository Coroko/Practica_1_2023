<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintGuide_begin="195dp" />

    <ImageView
            android:id="@+id/imagen_grupo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/rojo_practica"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/text_nombre_grupos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/text_rounded"
        android:text="@string/placeHolderRecycler"
        android:textColor="@color/orange_practica"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/text_info_grupos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_info_grupos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"

        android:fontFamily="@font/text_rounded"
        android:text="@string/placeHolderRecyclerInfo"
        android:textColor="@color/orange_practica"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_nombre_grupos"
        app:layout_constraintStart_toStartOf="@+id/text_nombre_grupos"
        app:layout_constraintTop_toBottomOf="@id/text_nombre_grupos"
        />


</androidx.constraintlayout.widget.ConstraintLayout>